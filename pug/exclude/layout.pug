doctype html
head

  //- VARIABLES
  -var company   = 'MusicMi'
  -var domain    = company+'.org' 
  -var signupURL = 'https://musicsol.teachworks.com/form/musicmi-sign-up-form'

  include urls

  meta(property='og:site_name' content=company)
  meta(property='og:type' content='website')
  meta(charset='utf-8')
  
  block continue_head

  link(rel='apple-touch-icon' sizes='180x180' href='./img/apple-touch-icon.png')
  link(rel='icon' type='image/png' sizes='32x32' href='./img/favicon-32x32.png')
  link(rel='icon' type='image/png' sizes='16x16' href='./img/favicon-16x16.png')
  link(rel='manifest' href='./site.webmanifest')
  //- Font Awesome icons (free version)
  //- script(src='https://use.fontawesome.com/releases/v5.15.1/js/all.js' crossorigin='anonymous')
  //- Core theme CSS (includes Bootstrap)
  link(href='./css/styles.css' rel='stylesheet')


  //- noscript
  //-   img(height='1' width='1' style='display:none' src='https://www.facebook.com/tr?id=1710380889236882&ev=PageView&noscript=1')
  //- //- End Facebook Pixel Code
body
  //- Google Tag Manager (noscript)
  noscript
    iframe(src='https://www.googletagmanager.com/ns.html?id=GTM-KZSFPR6' height='0' width='0' style='display:none;visibility:hidden')
  //- End Google Tag Manager (noscript)



  //- Navigation
  span#home
  nav#mainNav.navbar.navbar-shrink.navbar-expand-lg.navbar-light.fixed-top
    .container-fluid
      a.navbar-brand.js-scroll-trigger(href=urls.home)
        img(src='./img/musicmi-logo.svg' alt=company + ' logo')

      .nav-right-buttons
        a.phone(href='tel:786-353-6146')
          img(src='./img/call.png')
        button#menu-btn.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
          | Menu
        //- i.fas.fa-bars(style='margin-left:5px;')
      #navbarResponsive.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link.js-scroll-trigger(href=urls.about) About
       
          li.nav-item
            a.nav-link.js-scroll-trigger(href=urls.howItWorks) How it works?
       
          li.nav-item
            a.nav-link.js-scroll-trigger(href=urls.faq) FAQ
          
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-toggle='dropdown' aria-expanded='false') Want to help?
            .dropdown-menu
              a.dropdown-item(href=urls.donate) Donate
              a.dropdown-item(href=urls.amazonSmile target='_new') Amazon Smile 
              //- a.dropdown-item Volunteer

          li.nav-item
            a.nav-link.js-scroll-trigger(href=urls.contact) Contact

          li.nav-item.call
            a.nav-link(href='tel:786-353-6146') 786-353-6146

  block content

  block footer
    footer.bg-black.text-white.text-center.text-lg-start(style='border-top: 1px solid var(--primary);')
      // Grid container
      .container.p-4
        // Grid row
        .row
          // Grid column
          .col-lg-6.col-md-12.mb-4.mb-md-0
            h5.text-uppercase Our Mission
            p
              | At MusicMi we set a mission for ourselves is to provide aspiring young musicians from across the country with an opportunity to study with world-class artists and to provide our students with a music education of the highest artistic standards, regardless of your financial situation.
          // Grid column
          // Grid column
          .col-lg-3.col-md-6.mb-4.mb-md-0
            ul.list-unstyled.mb-0
              li
                a.nav-link.js-scroll-trigger(href=urls.home) Home
              li
                a.nav-link.js-scroll-trigger(href=urls.about) About
              li
                a.nav-link.js-scroll-trigger(href=urls.faq) FAQ
              li
                a.nav-link.js-scroll-trigger(href=urls.howItWorks) How it works
              li
                a.nav-link.js-scroll-trigger(href=urls.signup target='_new') Student sign up

          // Grid column
          // Grid column
          .col-lg-3.col-md-6.mb-4.mb-md-0
            ul.list-unstyled
              //- li
                a.nav-link.js-scroll-trigger(href='https://blog.musicsol.net') Blog
              //- li
                a.nav-link.js-scroll-trigger(href='#') Work with us
              li
                a.nav-link.js-scroll-trigger(href=urls.terms) Terms and Conditions
          // Grid column
        // Grid row
      // Grid container
      // Copyright
      .bg-white.text-black.text-center.p-3
        | &copy; &nbsp;
        span#copyrightyear
        |&nbsp;Copyright MusicMi 501(c)(3)
        script.
          document.getElementById('copyrightyear').innerText = new Date().getFullYear()
        
      // Copyright
    // Footer
    // Google fonts
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Jost:wght@400;700&family=Nunito:wght@200;400;700&family=Lato:wght@400;700&display=swap&text=1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz.%3A%3B%2C%3F%2F()!%24%26-%2B' rel='stylesheet')
